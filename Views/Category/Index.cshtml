@model IEnumerable<ExpensesWebApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categorias</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i>&nbsp;Criar nova categoria</a>
</p>
@if (Model.Count() == 0)
{
    <div class="border d-flex align-items-center justify-content-center" style="height:150px">
        <h2 class="text-danger">Ainda não há categorias.</h2>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
